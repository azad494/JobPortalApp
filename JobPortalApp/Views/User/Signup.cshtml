@using JobPortalApp.Models
@model JobPortalApp.Models.User
@{
    List<SelectListItem> types = ViewBag.types;
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <title>User Signup</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="~/images/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/bootstrap/css/bootstrap.min.css">
    
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Content/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/css/main.css">
    <!--===============================================================================================-->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/bootstrap-datepicker.css" rel="stylesheet" />
</head>
<body>
    <div class="site-navbar-wrap js-site-navbar bg-white">

        <div class="container">
            <div class="site-navbar bg-light">
                <div class="py-1">
                    <div class="row align-items-center">
                        <div class="col-2">
                            <h2 class="mb-0 site-logo"><a href="/Home/Index"><text style="font-size: 30px">Job</text><strong style="color: #3dcec2; font-size: 40px" class="font-weight-bold">Finder</strong> </a></h2>
                        </div>
                        <div class="col-10">
                            <nav class="site-navigation text-right" role="navigation">
                                <div class="container">
                                    <div class="d-inline-block d-lg-none ml-md-0 mr-auto py-3"><a href="#" class="site-menu-toggle js-menu-toggle text-black"><span class="icon-menu h3"></span></a></div>
                                    <ul class="site-menu js-clone-nav d-none d-lg-block">
                                        @*<li><a href="/Home/Contact">Contact</a></li>*@


                                    </ul>
                                </div>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
                @using (Html.BeginForm("Signup", "User", FormMethod.Post, new { id = "SignupForm", @class = "login100-form validate-form flex-sb flex-w" }))
                {

                    <span class="login100-form-title p-b-32">
                        Signup
                    </span>
                    if (ViewBag.message != null)
                    {
                        <label style="color: red">@ViewBag.message</label>
                    }
                    <span class="txt1 p-b-11">
                        Name
                    </span>
                    <div class="wrap-input100 validate-input m-b-36">
                        @Html.TextBoxFor(x => x.Name, new { @class = "input100" ,placeholder="Name"})
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(x => x.Name, "", new { style = "color:red" })
                    </div>

                    <span class="txt1 p-b-11">
                        Email
                    </span>
                    <div class="wrap-input100 validate-input m-b-36">

                        @Html.TextBoxFor(x => x.Email, new { @class = "input100", placeholder = "Email" })
                        <span class="focus-input100"></span>
                        
                            @Html.ValidationMessageFor(x => x.Email,"",new {style="color:red"})
                        
                    </div>
    
                    <span class="txt1 p-b-11">
                        Birthdate
                    </span>
                    <div class="wrap-input100 validate-input m-b-12">
                        
                        @Html.TextBoxFor(x => x.Birthdate, new {@class = "input100" , placeholder="MM/DD/YYYY"})
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(x => x.Birthdate, "", new { style = "color:red" })
                    </div>
                    <span class="txt1 p-b-11">
                        Gender
                    </span>
                    <div class="wrap-input100 validate-input m-b-12">
                        
                        @Html.TextBoxFor(x => x.Gender, new {@class = "input100"})
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(x => x.Gender, "", new { style = "color:red" })
                    </div>
                    <span class="txt1 p-b-11">
                        Password
                    </span>
                    <div class="wrap-input100 validate-input m-b-12">
                        <span class="btn-show-pass">
                            <i class="fa fa-eye"></i>
                        </span>
                        @Html.TextBoxFor(x => x.Password, new { @class = "input100", @type = "password", placeholder = "*********" })
                        <span class="focus-input100"></span>
                        @Html.ValidationMessageFor(x => x.Password, "", new { style = "color:red" })
                    </div>
                    <span class="txt1 p-b-11">
                        SignUp As
                    </span>
                    <div class="wrap-input100 validate-input m-b-12">
                        @Html.DropDownListFor(x => x.TypeId, new SelectList(types,"Value","Text"), new { @class = "btn btn-default dropdown-toggle" })
                        @*@Html.TextBoxFor(x=>x.Password,new {@class="input100" , @type="password"})*@
                        <span class="focus-input100"></span>
                        @*@Html.ValidationMessageFor(x=>x.Password);*@
                    </div>

                    <span class="txt1 p-b-11">
                        Company
                    </span><p>(If you are a Employer)</p>
                    <div class="wrap-input100 validate-input m-b-12">
                        
                        @Html.TextBoxFor(x => x.Company, new {@class = "input100"})
                        <span class="focus-input100"></span>
                       
                    </div>

                    <div class="container-login100-form-btn">
                        <button type="submit" class="login100-form-btn">
                            Signup
                        </button>
                    </div>

                }
            </div>
        </div>
    </div>


    <div id="dropDownSelect1"></div>

    <!--===============================================================================================-->
    <script src="~/Content/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/bootstrap/js/popper.js"></script>
<script src="~/Content/vendor/bootstrap/js/bootstrap.min.js"></script>


    <!--===============================================================================================-->
    <script src="~/Content/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Content/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Content/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/js/main.js"></script>
<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
<script src="~/js/jquery-3.3.1.min.js"></script>
<script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/bootstrap-datepicker.min.js"></script>
    <script>
        $('#Birthdate').datepicker({
            todayBtn: "linked",
            autoclose: true,
            todayHighlight: true,

        })
    </script>
</body>
</html>
